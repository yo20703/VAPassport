<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/passport"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".Passport.PassportActivity">
    <android.support.v7.widget.RecyclerView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/recycler_View">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <ImageView
                android:padding="30dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/staff"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="王小明"
                android:textSize="30sp"
                android:layout_width="120dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:text="1996/05/21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"/>
                <TextView
                    android:text="J123456789"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#73BF00"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="第一劑"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="AZ"
                android:textSize="30sp"
                android:layout_width="80dp"
                android:layout_height="100dp"/>
            <View
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:layout_width="1dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:text="2021.01.30 13:30"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
                <TextView
                    android:text="中國醫藥大學附設醫院"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#FFD306"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="第二劑"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="高端"
                android:textSize="30sp"
                android:layout_width="80dp"
                android:layout_height="100dp"/>
            <View
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:layout_width="1dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:text="2021.01.30 13:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
                <TextView
                    android:text="中國醫藥大學附設醫院"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#000079"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
        <TextView
            android:gravity="center"
            android:text="第三劑"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="默德納"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_width="80dp"
            android:layout_height="100dp"/>
        <View
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@android:color/white"
            android:layout_width="1dp"
            android:layout_height="70dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="2021.01.30 13:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
            <TextView
                android:text="中國醫藥大學附設醫院"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>